<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ChessMultitool.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ChessMultitool"
    Shell.FlyoutBehavior="Disabled"
    Title="ChessMultitool">

    <TabBar>

        <ShellContent 
        Title="Play" 
        Icon="explorer.png"
        ContentTemplate="{DataTemplate local:AILevelSelectionPage}" />

        <ShellContent 
        Title="Stats" 
        Icon="stats.png" 
        ContentTemplate="{DataTemplate local:StatsPage}" />

        <ShellContent 
        Title="Clock" 
        Icon="clock.png" 
        ContentTemplate="{DataTemplate local:ClockPage}" />

    </TabBar>

</Shell>
