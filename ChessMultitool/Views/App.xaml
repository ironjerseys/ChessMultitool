<?xml version="1.0" encoding="UTF-8"?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChessMultitool.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="../Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Default = Dark mode so UI is already dark before visiting SettingsPage -->
            <Color x:Key="GlobalBackgroundColor">#333333</Color>
            <Color x:Key="GlobalTextColor">#FFFFFF</Color>
            <Color x:Key="GlobalControlBackgroundColor">#444444</Color>

            <!-- Default board image (must exist in Resources/Images) -->
            <x:String x:Key="BoardImageSource">board_brown.png</x:String>
        </ResourceDictionary>
    </Application.Resources>
</Application>
