<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ChessMultitool.OpeningsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Openings">

    <VerticalStackLayout Padding="20" Spacing="20">

        <!-- Choix ouverture / variation -->
        <Picker x:Name="openingsPicker"
                Title="Choose an opening"
                SelectedIndexChanged="OnOpeningChanged" />

        <Picker x:Name="variationsPicker"
                Title="Choose a variation"
                SelectedIndexChanged="OnVariationChanged" />

        <!-- Échiquier -->
        <Grid x:Name="BoardGrid"
              WidthRequest="320"
              HeightRequest="320"
              HorizontalOptions="Center">

            <Image Source="Board.png"
                   Aspect="AspectFill"
                   ZIndex="0" />

            <Grid x:Name="HighlightGrid"
                  RowSpacing="0" ColumnSpacing="0"
                  BackgroundColor="Transparent"
                  ZIndex="1" />

            <Grid x:Name="PieceGrid"
                  RowSpacing="0" ColumnSpacing="0"
                  BackgroundColor="Transparent"
                  ZIndex="2" />
        </Grid>

        <!-- Coup affiché -->
        <Label x:Name="moveLabel"
               FontSize="20"
               HorizontalOptions="Center" />

        <!-- Navigation -->
        <HorizontalStackLayout HorizontalOptions="Center">
            <Button Text="Previous" Clicked="OnPreviousClicked" />
            <Button Text="Next" Clicked="OnNextClicked" Margin="20,0,0,0" />
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>
