<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChessMultitool.SettingsPage"
             Title="Settings">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Settings"
               FontSize="24"
               HorizontalOptions="Center" />
        <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
            <Label Text="Dark Mode:" VerticalOptions="Center" />
            <Switch x:Name="ThemeSwitch" Toggled="OnThemeToggled" IsToggled="True" />
        </HorizontalStackLayout>

        <Label Text="Board Theme:" FontAttributes="Bold" />
        <Picker x:Name="BoardPicker" Title="Select board" SelectedIndexChanged="OnBoardChanged" />
    </VerticalStackLayout>
</ContentPage>