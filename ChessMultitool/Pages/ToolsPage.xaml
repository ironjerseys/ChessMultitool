<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    x:Class="ChessMultitool.ToolsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Tools">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16" >
					
			<Label Text="Tools" FontSize="24" FontAttributes="Bold" HorizontalTextAlignment="Center" />
			
            <Label Text="Learn openings" FontSize="20" HorizontalTextAlignment="Center" FontAttributes="Bold" Margin="0,70,0,0" />
            <Button Text="Openings Book"  FontAttributes="Bold" Clicked="OnOpenOpeningsClicked" />
			
			<Label Text="Discover your achievements" FontSize="20" HorizontalOptions="Center" FontAttributes="Bold" Margin="0,20,0,0" />
			<Button Text="Achievements"  FontAttributes="Bold" Clicked="OnOpenAchievementsClicked" />
			
			<Label Text="Launch clock" FontSize="20" HorizontalOptions="Center" FontAttributes="Bold" Margin="0,20,0,0" />
			<Button Text="Clock"  FontAttributes="Bold" Clicked="OnOpenClockClicked" />
			
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
