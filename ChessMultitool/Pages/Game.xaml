<ContentPage
    x:Class="ChessMultitool.ChessGame"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Chess">

    <Grid RowDefinitions="Auto,Auto" Padding="0,12,0,12">

        <!-- Ligne 0 : le plateau centré -->
        <Grid Grid.Row="0" VerticalOptions="Center" HorizontalOptions="Center">
            <Grid x:Name="BoardGrid"
                  WidthRequest="{OnPlatform Android=320, iOS=320, WinUI=600}"
                  HeightRequest="{OnPlatform Android=320, iOS=320, WinUI=600}">
                <Image Source="Board.png" Aspect="AspectFill" InputTransparent="True" ZIndex="0" />
                <Grid x:Name="HighlightGrid" RowSpacing="0" ColumnSpacing="0" BackgroundColor="Transparent" ZIndex="1" />
                <Grid x:Name="PieceGrid"     RowSpacing="0" ColumnSpacing="0" BackgroundColor="Transparent" ZIndex="2" />
                <ContentView x:Name="MenuContainer" BackgroundColor="Transparent" ZIndex="3" />
            </Grid>
        </Grid>

        <!-- Ligne 1 : l’historique SAN -->
        <ScrollView Grid.Row="1"
            x:Name="MovesScroll"
            Orientation="Vertical"
            HorizontalOptions="Center"
            Padding="12,8,12,0">
            <Label x:Name="MovesBlock"
         WidthRequest="{Binding Source={x:Reference BoardGrid}, Path=Width}"
         FontSize="20"
         LineBreakMode="WordWrap"
         HorizontalTextAlignment="Start"
         TextColor="{AppThemeBinding Light=#111, Dark=#EEE}" />
        </ScrollView>
    </Grid>
</ContentPage>